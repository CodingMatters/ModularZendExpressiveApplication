{
    "name": "codingmatters/modular-zend-expressive-application",
    "description": "A Modular Skeleton Application based on Zend Expressive",
    "type": "project",    
    "license": "MIT",
    "authors": [
        {
            "name": "Gab Amba",
            "homepage": "http://www.gabbydgab.com/",
            "email": "gamba@gabbydgab.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "roave/security-advisories": "dev-master",        
        "codingmatters/zend-expressive-config-provider": "~0.1",
        "codingmatters/expressive-web-component": "~0.1",        
        "zendframework/zend-config-aggregator": "~0.1"
    },
    "require-dev": {
        "zendframework/zend-component-installer": "~0.5",
        "zfcampus/zf-development-mode": "^3.0",        
        "squizlabs/php_codesniffer": "^2.7.1",        
        "sebastian/phpcpd": "^2.0.4",
        "phpunit/phpunit": "^5.7.4",
        "filp/whoops": "^2.1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "module/App/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "module/App/test/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@debug"
        ],
        "post-update-cmd": [
            "@debug"
        ],
        "post-create-project-cmd": [
            "@development-enable",
            "@serve"
        ],
        "debug": [
            "@cs",
            "@cpd",
            "@test"
        ],
        "cs": "phpcs --ignore=/vendor,/build module",
        "cs-fix": "phpcbf --ignore=/vendor,/build module",
        "cpd": "phpcpd --exclude=/vendor,/build --fuzzy module",
        "test": "phpunit --verbose",                
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php"        
    }
}
